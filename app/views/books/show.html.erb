<div class="all" style="display: flex; align-items: flex-start;">
  <div class="upper-container" style="margin-top: 0.5rem; margin-left: 2rem; width: 70vw; height: 30vh; display: flex; overflow: hidden;">
    
    <!-- Book Cover and Extra Content Container (e.g nearby button)-->
    <div class="left-upper-container" style="border: 0.05rem solid black; flex: 1; display: flex; flex-direction: column; justify-content: space-between; height: 100%;">
      
      <!-- Book Cover -->
      <div class="book-cover" style="flex: 2; display: flex; justify-content: center; align-items: center; overflow: hidden;">
        <%= image_tag(@book.cover_image_url, alt: "book-cover", style: "margin-top: 0.5rem; max-width: 100%; max-height: 100%; object-fit: contain;") %>
      </div>
      
      <!-- Additional Content Below Book Cover -->
      <div class="extra-content" style="flex: 1; text-align: center; padding-top: 0.5rem;">
         <button class="btn btn-dark btn-sm">Add to User Library</button>
         <button class="btn btn-secondary btn-sm">Nearby </button>
      </div>
    </div>
    
    <!-- Book Details right container-->
    <div class="book-details ms-3 p-3 text-center" style="border: 0.05rem solid black; flex: 2; padding-left: 1rem; overflow: hidden;">
      <h2><%= @book.title %></h2>
      <p><%= @book.author %></p>
      <p><%= @book.summary %></p>
    </div>
  </div>

  <div class="right-container" style="width: 15vw; height: 80vh; border: 0.05rem solid black; margin-top: 0.5rem; margin-left: 8rem">
    <p class="text-center m-3">Reviews</p>
  </div>
</div>
