<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.pexels.com/photos/1485114/pexels-photo-1485114.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');">
  <div class="container">
    <h1>Top text</h1>
    <p>Text</p>
  </div>
</div>

<div class="container py-5">
  <div class="btn-group mb-3">
    <button type="button" class="btn btn-secondary toggle-btn" data-target="random">Random</button>
    <button type="button" class="btn btn-secondary toggle-btn" data-target="selection">Our Selection</button>
    <button type="button" class="btn btn-secondary toggle-btn" data-target="vibes">Vibes</button>
  </div>

  <div id="carouselContainer">
    <div id="carousel-random" class="carousel-category active">
      <div id="bookCarouselRandom" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @random_books.each_slice(4).with_index do |books_slice, index| %>
            <div class="carousel-item <%= 'active' if index.zero? %>">
              <div class="d-flex justify-content-center" style="gap: 20px;">
                <% books_slice.each do |book| %>
                  <div class="text-center">
                    <%= image_tag book.cover_image_url, alt: book.title, class: "book-cover" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bookCarouselRandom" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bookCarouselRandom" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <div id="carousel-selection" class="carousel-category">
      <div id="bookCarouselSelection" class="carousel slide" data-bs-ride="carousel">
      </div>
    </div>

    <div id="carousel-vibes" class="carousel-category">
      <div id="bookCarouselVibes" class="carousel slide" data-bs-ride="carousel">
      </div>
    </div>
  </div>
</div>
